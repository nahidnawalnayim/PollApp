  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Poll page</title>
  </head>
  <body>

    <div class="lg:w-1/3 md:w-1/2 bg-white flex flex-col md:ml-40 w-full md:py-8 mt-8 md:mt-0">
      <h2 class="text-gray-900 text-3xl mb-1 font-medium title-font">Create a new Poll</h2>
      <p class="leading-relaxed mb-5 text-gray-600"></p>
      <form action="/form" method="POST">

        <div class="relative mb-4">
          <label for="name" class="leading-7 text-sm text-gray-600">Enter Title</label>
          <input type="text" id="name" name="title" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        <div class="relative mb-4">
          <label for="email" class="leading-7 text-sm text-gray-600">Enter Description</label>
          <input type="text" id="email" name="description" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        <div id="option">
          <div class="relative mb-4 form-group">
            <label for="name" class="leading-7 text-sm text-gray-600">Enter options</label>
            <input type="text" id="name" name="option" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
          <div class="relative mb-4">
            <label for="name" class="leading-7 text-sm text-gray-600">Enter options</label>
            <input type="text" id="name" name="option" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
        </div>
        
        <button class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-md" id="addOption">Add option</button>
      
        <button class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-md">Create Poll</button>
      
      </form>

    </div>

<script>
  const options=document.getElementById('option');
  const addOption=document.getElementById('addOption');
let currentoption=3;
  addOption.addEventListener('click',function(e) {
    e.preventDefault();
    const newoption=createnewOption()
    options.append(newoption)
  })

  function createnewOption() {
    let div=document.createElement('div');
    div.className="form-group";

    let input=document.createElement('input');
    input.type="text";
    input.name='options';
    input.placeholder='Option'+currentoption++;
  
    div.appendChild(input)
  return div  
  }

</script>    
  </body>
  </html>